{
  "name": "papermirror-proxy",
  "version": "2.0.0",
  "description": "PaperMirror 代理服务 - 安全、高性能的 Gemini API 代理",
  "main": "proxy.js",
  "scripts": {
    "start": "node proxy.js",
    "dev": "nodemon proxy.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint *.js",
    "lint:fix": "eslint *.js --fix",
    "deploy": "gcloud run deploy papermirror-proxy --source . --allow-unauthenticated --memory=512Mi --cpu=1 --max-instances=10 --min-instances=0 --region=us-central1",
    "deploy:staging": "gcloud run deploy papermirror-proxy-staging --source . --allow-unauthenticated --memory=256Mi --cpu=1 --max-instances=5 --min-instances=0 --region=us-central1",
    "logs": "gcloud run services logs read papermirror-proxy --region=us-central1",
    "logs:staging": "gcloud run services logs read papermirror-proxy-staging --region=us-central1",
    "status": "gcloud run services describe papermirror-proxy --region=us-central1",
    "docker:build": "docker build -t papermirror-proxy .",
    "docker:run": "docker run -p 8080:8080 --env-file .env papermirror-proxy",
    "docker:push": "docker push gcr.io/$(gcloud config get-value project)/papermirror-proxy",
    "security:audit": "npm audit",
    "security:fix": "npm audit fix"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "compression": "^1.7.4",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "@google/generative-ai": "^0.21.0",
    "express-rate-limit": "^7.1.5",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "express-winston": "^4.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.56.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^6.1.1"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "papermirror",
    "gemini",
    "proxy",
    "ai",
    "google-cloud",
    "api-gateway",
    "rate-limiting",
    "cors",
    "security",
    "nodejs"
  ],
  "author": "PaperMirror Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/PaperMirror.git"
  },
  "bugs": {
    "url": "https://github.com/your-username/PaperMirror/issues"
  },
  "homepage": "https://github.com/your-username/PaperMirror#readme"
}