{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node",
      "vite/client"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@papermirror/types": [
        "./shared/types/src"
      ],
      "@papermirror/prompts": [
        "./shared/prompts/src"
      ]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true
  },
  "include": [
    "src/**/*",
    "shared/**/*",
    "src/types/**/*",
    "src/prompts/**/*",
    "components/**/*",
    "hooks/**/*",
    "services/**/*",
    "utils/**/*",
    "*.ts",
    "*.tsx"
  ]
}
